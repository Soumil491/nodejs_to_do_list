<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>To Do List App</title>
</head>

<body class="container">
    <h1>To Do List</h1>
    <!-- Creating the task -->
    <br>
    <div>
        <form action="/createTask" method="POST">
            <h4>Insert a Task</h4>
            <input type="text" placeholder="Insert your task" id="task-name" name="taskName">
            <input type="submit" value="Insert" class="btn btn-primary">
        </form>
    </div>
    <br>
    <!-- Updating the task -->
    <div>
        <h4>Update a task</h4>
        <form>
            <input id="update-task" type="text" placeholder="Enter task to be updated" name="updateTaskName" >
            <input id="new-task" type="text" placeholder="Enter new task" name="newTaskName"/>
            <br>
            <button style="margin-top: 5px;" id="update" class="btn btn-success">Update</button>
        </form>
    </div>
    <br>
    <!-- Deleting the task -->
    <div>
        <h4>Delete a task</h4>
        <form>
            <input type="text" placeholder="Delete task" name="deleteTaskName" id="deleteTaskName"/>
            <button id="delete" class="btn btn-danger">Delete</button>
        </form>
    </div>
    <br>
    <!-- Displaying the tasks  -->
    <div>
        <h4>Here are your tasks</h4>
        <ul>
            <% tasks.forEach((task)=> { %>
                <li>
                    <%= task.taskName %>
                </li>
            <% }) %>
        </ul>
    </div>

    <script src="/main.js"></script>
</body>

</html>